---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
}

const {
  title = "Francesc Català-Moll - Bioinformatics & Microbiome Analytics",
  description = "Bioinformatician specializing in microbiome research, epigenetics, and multi-omics integration. Using AI to uncover microbiome-immune system interactions.",
  image = "/og-image.jpg",
  type = "website",
} = Astro.props;

// Construct full URL for Open Graph image
const siteURL = Astro.site || new URL("http://localhost:4321");
const canonicalURL = new URL(Astro.url.pathname, siteURL);
const imageURL = new URL(image, siteURL);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/1-2962cfe1.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Francesc Català-Moll" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />
    <meta name="twitter:creator" content="@fcatalamoll" />
    <meta name="twitter:site" content="@fcatalamoll" />

    <!-- SEO Meta Tags -->
    <meta name="author" content="Francesc Català-Moll" />
    <meta
      name="keywords"
      content="Francesc Català-Moll, bioinformatics, microbiome, epigenetics, computational biology, multi-omics, data science"
    />

    <!-- Schema.org JSON-LD for Person -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Francesc Català-Moll",
        "url": "https://francesc-catala.com",
        "image": "https://francesc-catala.com/og-image.jpg",
        "jobTitle": "Bioinformatician",
        "description": "Bioinformatician specializing in microbiome research, epigenetics, and multi-omics integration. Using AI to uncover microbiome-immune system interactions.",
        "knowsAbout": [
          "Bioinformatics",
          "Microbiome Research",
          "Epigenetics",
          "Multi-omics",
          "Computational Biology",
          "Data Science"
        ],
        "sameAs": [
          "https://twitter.com/fcatalamoll",
          "https://github.com/xec-cm",
          "https://www.linkedin.com/in/francesc-catala-moll",
          "https://orcid.org/0000-0003-2883-0749"
        ]
      }
    </script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&family=Caveat:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Preload hero image for faster initial render -->
    <link rel="preload" href="/images/hero/hero.svg" as="image" />
  </head>
  <body class="min-h-screen bg-white text-slate-900 font-sans flex flex-col">
    <Header />

    <!-- Main content with top padding to account for fixed header -->
    <main class="pt-20 flex-grow">
      <slot />
    </main>

    <Footer />
    <script>
      // Scroll reveal animation
      const observerOptions = {
        root: null,
        rootMargin: "0px",
        threshold: 0.1,
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("reveal-visible");
            observer.unobserve(entry.target); // Only animate once
          }
        });
      }, observerOptions);

      document.addEventListener("DOMContentLoaded", () => {
        const revealElements = document.querySelectorAll(".reveal");
        revealElements.forEach((el) => observer.observe(el));
      });
    </script>
  </body>
</html>

<style is:global>
  /* Global styles */
  body {
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    line-height: 1.6;
    letter-spacing: -0.01em;
    background-color: white;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Playfair Display", serif;
  }

  .font-serif {
    font-family: "Playfair Display", serif;
  }

  .font-sans {
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
  }

  .font-handwritten {
    font-family: "Caveat", cursive;
  }

  /* Prose styles for markdown content */
  .prose {
    font-family: "Inter", sans-serif;
    color: #475569;
  }

  .prose h2 {
    font-family: "Playfair Display", serif;
    font-weight: 700;
    color: #1e293b;
    font-size: 2rem;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid rgba(97, 112, 86, 0.3);
    line-height: 1.2;
  }

  .prose h3 {
    font-family: "Playfair Display", serif;
    font-weight: 700;
    color: #3d4435;
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .prose h4 {
    font-family: "Playfair Display", serif;
    font-weight: 700;
    color: #1e293b;
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  .prose p {
    color: #475569;
    line-height: 1.8;
    margin-top: 1.5em;
    margin-bottom: 1.5em;
    font-size: 1.125rem;
  }

  .prose ul,
  .prose ol {
    margin-top: 1.5em;
    margin-bottom: 1.5em;
    padding-left: 1.75em;
    list-style-position: outside;
  }

  .prose ul {
    list-style-type: disc;
  }

  .prose ol {
    list-style-type: decimal;
  }

  .prose li {
    color: #475569;
    line-height: 1.75;
    margin-top: 0.5em;
    margin-bottom: 0.5em;
    padding-left: 0.25em;
  }

  .prose li::marker {
    color: #617056;
    font-weight: 600;
  }

  .prose strong {
    color: #1e293b;
    font-weight: 700;
  }

  .prose em {
    color: #475569;
    font-style: italic;
  }

  .prose a {
    color: #617056;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
  }

  .prose a:hover {
    color: #3d4435;
    text-decoration: underline;
  }

  .prose code {
    color: #3d4435;
    background-color: rgba(97, 112, 86, 0.05);
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    border: 1px solid rgba(97, 112, 86, 0.2);
    font-family: "Courier New", monospace;
  }

  .prose code::before,
  .prose code::after {
    content: none;
  }

  .prose pre {
    background-color: #1e293b;
    color: #e2e8f0;
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
    overflow-x: auto;
  }

  .prose pre code {
    background-color: transparent;
    color: inherit;
    padding: 0;
    border: none;
    font-size: 0.875rem;
  }

  .prose blockquote {
    border-left: 4px solid #617056;
    background-color: rgba(97, 112, 86, 0.05);
    padding: 1rem 1.5rem;
    font-style: italic;
    border-radius: 0 0.5rem 0.5rem 0;
    margin: 2rem 0;
    color: #475569;
  }

  .prose img {
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    margin: 2rem 0;
  }

  .prose hr {
    border-color: #e2e8f0;
    margin: 3rem 0;
  }

  .prose table {
    width: 100%;
    margin: 2rem 0;
    border-collapse: collapse;
  }

  .prose th {
    background-color: #f8fafc;
    padding: 0.75rem 1rem;
    text-align: left;
    font-weight: 600;
    border-bottom: 2px solid #e2e8f0;
  }

  .prose td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #f1f5f9;
  }

  .prose tr:hover {
    background-color: #f8fafc;
  }

  /* Scroll reveal animations */
  .reveal {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.8s ease-out,
      transform 0.8s ease-out;
  }

  .reveal-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Staggered delays for children if needed */
  .reveal-delay-100 {
    transition-delay: 500ms;
  }
  .reveal-delay-200 {
    transition-delay: 200ms;
  }
  .reveal-delay-300 {
    transition-delay: 300ms;
  }
</style>
