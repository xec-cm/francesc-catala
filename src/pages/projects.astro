---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all projects and sort by order
const projects = (await getCollection('projects')).sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Projects - Francesc CatalÃ -Moll">
  <article class="py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">

      <!-- Page Header -->
      <header class="mb-12">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-serif font-bold text-slate-900 mb-4">
          Projects
        </h1>
        <p class="text-lg text-slate-600 font-sans">
          Research tools and applications in bioinformatics and data analysis
        </p>
        <p class="text-sm text-slate-500 font-sans mt-2">
          {projects.length} {projects.length === 1 ? 'project' : 'projects'}
        </p>
      </header>

      <!-- Bento Grid Layout -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project) => {
          return (
            <div class="group cursor-pointer">
              <article class="relative bg-white rounded-xl p-6 h-full flex flex-col transition-all duration-200 hover:shadow-xl border-2 border-slate-200 hover:border-primary">
                <!-- Image -->
                <div class="flex justify-center items-center mb-6">
                  <img
                    src={project.data.image}
                    alt={project.data.title}
                    class="h-32 object-contain transition-transform duration-300 group-hover:scale-110"
                  />
                </div>

                <!-- Title -->
                <h3 class="text-xl sm:text-2xl font-handwritten font-medium text-primary mb-3 group-hover:text-primary-dark transition-colors duration-200">
                  {project.data.title}
                </h3>

                <!-- Description -->
                <p class="text-sm text-slate-600 leading-relaxed mb-4 flex-1">
                  {project.data.description}
                </p>

                <!-- Technologies -->
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.data.technologies.map((tech) => (
                    <span class="px-2.5 py-1 bg-primary/10 text-primary-dark text-xs font-medium rounded-lg border border-primary/20">
                      {tech}
                    </span>
                  ))}
                </div>

                <!-- Links -->
                <div class="flex gap-3 pt-4 border-t border-slate-100">
                  {project.data.github && (
                    <a
                      href={project.data.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-2 px-3 py-2 bg-slate-900 text-white text-sm rounded-lg hover:bg-slate-800 transition-colors duration-200"
                      onclick="event.stopPropagation()"
                    >
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      Code
                    </a>
                  )}
                  {project.data.demo && (
                    <a
                      href={project.data.demo}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-2 px-3 py-2 bg-primary text-white text-sm rounded-lg hover:bg-primary-dark transition-colors duration-200"
                      onclick="event.stopPropagation()"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                      Website
                    </a>
                  )}
                </div>
              </article>
            </div>
          );
        })}
      </div>

      <!-- Footer Navigation -->
      <footer class="mt-16">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-slate-600 hover:text-primary transition-colors duration-200"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to home
        </a>
      </footer>
    </div>
  </article>
</Layout>

<style>
  /* Line clamp utility */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
