    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

      <!-- Back Button -->
      <a
        href="/blog"
        class="inline-flex items-center gap-2 text-primary hover:text-primary-dark mb-12 transition-all duration-200 group"
