---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });

  // Get all unique tags
  const allTags = [...new Set(posts.flatMap((post) => post.data.tags || []))];

  return allTags.map((tag) => {
    const filteredPosts = posts.filter((post) =>
      post.data.tags?.includes(tag)
    );
    return {
      params: { tag },
      props: { posts: filteredPosts, tag },
    };
  });
}

const { posts, tag } = Astro.props;

// Convert to unified format and sort by date
const allPosts = posts
  .map(post => ({
    slug: post.slug,
    title: post.data.title,
    date: post.data.date,
    excerpt: post.data.excerpt,
    image: post.data.image,
    tags: post.data.tags || [],
    url: `/blog/${post.slug}`
  }))
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

// Format date helper
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
}

// Group posts by year
const postsByYear = allPosts.reduce((acc, post) => {
  const year = new Date(post.date).getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {} as Record<number, typeof allPosts>);

const years = Object.keys(postsByYear).sort((a, b) => Number(b) - Number(a));

// Capitalize tag for display
const displayTag = tag.split('-').map(word =>
  word.charAt(0).toUpperCase() + word.slice(1)
).join(' ');
---

<Layout
  title={`Posts tagged "${displayTag}" - Francesc CatalÃ -Moll`}
  description={`Explore all blog posts about ${displayTag}`}
>
  <article class="py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">

      <!-- Page Header -->
      <header class="mb-12">
        <!-- Back to Blog -->
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-slate-600 hover:text-primary transition-colors duration-200 mb-6"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to all posts
        </a>

        <div class="flex items-center gap-3 mb-4">
          <span class="px-4 py-2 bg-primary/10 text-primary-dark text-sm font-medium rounded-lg border border-primary/20">
            {displayTag}
          </span>
        </div>

        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-serif font-bold text-slate-900 mb-4">
          Posts tagged "{displayTag}"
        </h1>
        <p class="text-lg text-slate-600 font-sans">
          Thoughts on bioinformatics, data analysis, and research
        </p>
        <p class="text-sm text-slate-500 font-sans mt-2">
          {allPosts.length} {allPosts.length === 1 ? 'post' : 'posts'}
        </p>
      </header>

      <!-- Posts by Year -->
      <div class="space-y-12">
        {years.map((year) => (
          <section>
            <!-- Year Header -->
            <div class="mb-6 pb-2 border-b-2 border-primary/20">
              <h2 class="text-2xl font-serif font-bold text-slate-900">
                {year}
              </h2>
              <p class="text-sm text-slate-500 mt-1">
                {postsByYear[Number(year)].length} {postsByYear[Number(year)].length === 1 ? 'post' : 'posts'}
              </p>
            </div>

            <!-- Posts List -->
            <div class="space-y-6">
              {postsByYear[Number(year)].map((post) => (
                <a
                  href={post.url}
                  class="group block"
                >
                  <article class="relative pl-6 pr-4 py-5 border-l-4 border-slate-200 group-hover:border-primary transition-all duration-300 bg-white group-hover:bg-slate-50/50">
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                      <!-- Content -->
                      <div class="flex-1 min-w-0">
                        <!-- Date -->
                        <time class="text-xs text-slate-500 uppercase tracking-wider font-medium">
                          {formatDate(post.date)}
                        </time>

                        <!-- Title -->
                        <h3 class="text-xl font-serif font-bold text-slate-900 mt-2 mb-2 group-hover:text-primary transition-colors duration-200 leading-snug">
                          {post.title}
                        </h3>

                        <!-- Excerpt -->
                        <p class="text-sm text-slate-600 mb-3 leading-relaxed line-clamp-2">
                          {post.excerpt}
                        </p>

                        <!-- Tags -->
                        {post.tags && post.tags.length > 0 && (
                          <div class="flex flex-wrap gap-2">
                            {post.tags.slice(0, 3).map((postTag) => (
                              <a
                                href={`/blog/tag/${postTag}`}
                                class={`px-2.5 py-1 text-xs font-medium rounded-full border transition-colors duration-200 ${
                                  postTag === tag
                                    ? 'bg-primary text-white border-primary'
                                    : 'bg-primary/10 text-primary-dark border-primary/20 hover:bg-primary hover:text-white'
                                }`}
                                onclick="event.stopPropagation(); event.preventDefault(); window.location.href=this.href;"
                              >
                                {postTag}
                              </a>
                            ))}
                          </div>
                        )}
                      </div>

                      <!-- Image -->
                      {post.image && (
                        <div class="md:w-48 md:flex-shrink-0">
                          <div class="h-32 md:h-full rounded-lg overflow-hidden bg-white">
                            <img
                              src={post.image}
                              alt={post.title}
                              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                              loading="lazy"
                            />
                          </div>
                        </div>
                      )}
                    </div>
                  </article>
                </a>
              ))}
            </div>
          </section>
        ))}
      </div>

      <!-- Footer Navigation -->
      <footer class="mt-16">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-slate-600 hover:text-primary transition-colors duration-200"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to all posts
        </a>
      </footer>
    </div>
  </article>
</Layout>
