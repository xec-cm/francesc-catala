---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';
import heroData from '../data/hero.json';

// Get contact page content
const contactEntry = await getEntry('meta', 'contact');
const { Content } = await contactEntry.render();

// Extract email from heroData
const emailHref = heroData.social.email;
const emailDisplay = emailHref.replace('mailto:', '');
---

<Layout title="Contact - Francesc CatalÃ -Moll">
  <article class="py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">

      <!-- Page Header -->
      <header class="mb-16 text-center">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-serif font-bold text-slate-900 mb-4">
          {contactEntry.data.title}
        </h1>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          {contactEntry.data.description}
        </p>
      </header>

      <!-- Contact Info -->
      <section class="mb-16">
        <div class="text-center space-y-6">
          <!-- Email -->
          <div>
            <p class="text-sm uppercase tracking-wide text-slate-500 mb-2">Email</p>
            <a href={emailHref} class="text-2xl font-handwritten text-primary hover:text-primary-dark transition-colors inline-flex items-center gap-2 group">
              <svg class="w-6 h-6 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {emailDisplay}
            </a>
          </div>

          <!-- Location -->
          <div class="flex items-center justify-center gap-8 pt-4 text-slate-600">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>Menorca, Illes Balears, Spain</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>Response within 24-48h</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Divider -->
      <div class="relative mb-16">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-200"></div>
        </div>
        <div class="relative flex justify-center">
          <span class="bg-white px-4 text-sm text-slate-500">or send a message</span>
        </div>
      </div>

      <!-- Contact Form -->
      <section class="mb-16">
        <div class="max-w-2xl mx-auto">
          <form
            id="contact-form"
            class="space-y-6"
          >
          <!-- Access Key (replace with your Web3Forms key) -->
          <input type="hidden" name="access_key" value="YOUR_ACCESS_KEY_HERE">

          <!-- Redirect URL after submission -->
          <input type="hidden" name="redirect" value="false">

          <!-- Name and Email Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-medium text-slate-700 mb-2">
                Name <span class="text-primary">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-0 py-3 border-0 border-b-2 border-slate-200 focus:border-primary focus:outline-none transition-colors duration-200 bg-transparent"
                placeholder="Your name"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
                Email <span class="text-primary">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-0 py-3 border-0 border-b-2 border-slate-200 focus:border-primary focus:outline-none transition-colors duration-200 bg-transparent"
                placeholder="your.email@example.com"
              />
            </div>
          </div>

          <!-- Subject -->
          <div>
            <label for="subject" class="block text-sm font-medium text-slate-700 mb-2">
              Subject <span class="text-primary">*</span>
            </label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full px-0 py-3 border-0 border-b-2 border-slate-200 focus:border-primary focus:outline-none transition-colors duration-200 bg-transparent"
              placeholder="What's this about?"
            />
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-sm font-medium text-slate-700 mb-2">
              Message <span class="text-primary">*</span>
            </label>
            <textarea
              id="message"
              name="message"
              rows="6"
              required
              class="w-full px-0 py-3 border-0 border-b-2 border-slate-200 focus:border-primary focus:outline-none transition-colors duration-200 resize-none bg-transparent"
              placeholder="Tell me about your project or question..."
            ></textarea>
          </div>

          <!-- Honeypot for spam protection -->
          <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

          <!-- Submit Button -->
          <div class="flex justify-center pt-4">
            <button
              type="submit"
              id="submit-button"
              class="group relative px-12 py-4 bg-primary hover:bg-primary-dark text-white font-handwritten text-lg rounded-full transition-all duration-300 flex items-center gap-3 hover:shadow-xl hover:scale-105 active:scale-95 overflow-hidden disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <div class="absolute inset-0 bg-gradient-to-r from-primary-dark/0 via-white/20 to-primary-dark/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
              <span class="relative" id="button-text">Send Message</span>
              <svg id="button-icon" class="relative w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </button>
          </div>

          <!-- Success/Error Messages -->
          <div id="form-message" class="hidden rounded-lg p-4 text-center"></div>
        </form>
        </div>
      </section>

      <!-- Social Media -->
      <section>
        <div class="text-center mb-8">
          <p class="text-sm text-slate-500">Also find me on</p>
        </div>

        <div class="flex gap-4 justify-center items-center flex-wrap">
          <!-- GitHub -->
          <a
            href={heroData.social.github}
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-600 hover:text-primary transition-colors duration-200"
            aria-label="GitHub"
          >
