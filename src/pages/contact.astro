---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

// Get contact page content
const contactEntry = await getEntry('meta', 'contact');
const { Content } = await contactEntry.render();

// Get Web3Forms access key from environment variable
const web3formsKey = import.meta.env.WEB3FORMS_ACCESS_KEY;

// Function to check if I'm currently working (this will be evaluated client-side)
// Working hours: Monday-Friday, 8:00 AM - 5:00 PM (Europe/Madrid timezone)
---

<Layout title="Contact - Francesc CatalÃ -Moll">
  <article class="py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">

      <!-- Two Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-[1.6fr_1fr] gap-12 lg:gap-16">

        <!-- Left Column: Get in Touch -->
        <div class="flex flex-col justify-center space-y-8">
          <div>
            <p class="text-2xl text-primary font-handwritten leading-relaxed mb-6">
              {contactEntry.data.tagline}
            </p>
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-serif font-bold text-slate-900 mb-8 leading-tight">
              {contactEntry.data.title}
            </h1>
            <p class="text-lg text-slate-500 leading-relaxed">
              {contactEntry.data.description}
            </p>
          </div>

          <!-- Contact Details -->
          <div class="space-y-6 pt-4">
            <!-- Email and Response Time in Two Columns -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-slate-500 mb-1">Email</p>
                  <a href={`mailto:${contactEntry.data.email}`} class="text-base text-slate-900 hover:text-primary transition-colors font-medium">
                    {contactEntry.data.email}
                  </a>
                </div>
              </div>

              <!-- Response Time -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-slate-500 mb-1">Response Time</p>
                  <p class="text-base text-slate-900">{contactEntry.data.responseTime}</p>
                </div>
              </div>
            </div>

            <!-- Current Location and Status in Two Columns -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <!-- Location -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-slate-500 mb-1">Current Location</p>
                  <p class="text-base text-slate-900">{contactEntry.data.location}</p>
                </div>
              </div>

              <!-- Availability -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-slate-500 mb-1">{contactEntry.data.availabilityLabel}</p>
                  <div class="flex items-center gap-2">
                    <p id="status-text" class="text-base text-slate-900"></p>
                    <span id="status-dot" class="w-2 h-2 rounded-full"></span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Map -->
            <div class="pt-6">
              <div
                id="map"
                class="max-w-md mx-auto rounded-lg overflow-hidden border-2 border-primary/20 shadow-sm"
                style="height: 200px;"
              ></div>
            </div>
          </div>
        </div>

        <!-- Right Column: Contact Form -->
        <div class="bg-primary/5 rounded-2xl p-6 lg:p-8 border border-primary/10 self-center">
          <h2 class="text-2xl font-serif font-bold text-slate-900 mb-4">Send a Message</h2>
          <form
            id="contact-form"
            class="space-y-3"
          >
          <!-- Access Key from environment variable -->
          <input type="hidden" name="access_key" value={web3formsKey}>

          <!-- Redirect URL after submission -->
          <input type="hidden" name="redirect" value="false">

          <!-- Name and Email Row -->
          <div class="space-y-3">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-medium text-slate-700 mb-2">
                Name <span class="text-primary">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-0 py-2 border-0 border-b-2 border-slate-200 focus:border-primary focus:outline-none transition-colors duration-200 bg-transparent"
                placeholder="Your name"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
                Email <span class="text-primary">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-0 py-2 border-0 border-b-2 border-slate-200 focus:border-primary focus:outline-none transition-colors duration-200 bg-transparent"
                placeholder="your.email@example.com"
              />
            </div>
          </div>

          <!-- Subject -->
          <div>
            <label for="subject" class="block text-sm font-medium text-slate-700 mb-2">
              Subject <span class="text-primary">*</span>
            </label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full px-0 py-2 border-0 border-b-2 border-slate-200 focus:border-primary focus:outline-none transition-colors duration-200 bg-transparent"
              placeholder="What's this about?"
            />
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-sm font-medium text-slate-700 mb-2">
              Message <span class="text-primary">*</span>
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-0 py-2 border-0 border-b-2 border-slate-200 focus:border-primary focus:outline-none transition-colors duration-200 resize-none bg-transparent"
              placeholder="Tell me about your project or question..."
            ></textarea>
          </div>

          <!-- Honeypot for spam protection -->
          <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

          <!-- Submit Button -->
          <div class="flex justify-center pt-4">
            <button
              type="submit"
              id="submit-button"
              class="group relative px-12 py-4 bg-primary hover:bg-primary-dark text-white font-handwritten text-lg rounded-full transition-all duration-300 flex items-center gap-3 hover:shadow-xl hover:scale-105 active:scale-95 overflow-hidden disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <div class="absolute inset-0 bg-gradient-to-r from-primary-dark/0 via-white/20 to-primary-dark/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
              <span class="relative" id="button-text">Send Message</span>
              <svg id="button-icon" class="relative w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </button>
          </div>

          <!-- Success/Error Messages -->
          <div id="form-message" class="hidden rounded-lg p-4 text-center"></div>
        </form>
        </div>
      </div>
    </div>
  </article>
</Layout>

<script>
  // Form submission handler using Web3Forms
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const messageDiv = document.getElementById('form-message') as HTMLDivElement;
  const submitButton = document.getElementById('submit-button') as HTMLButtonElement;
  const buttonText = document.getElementById('button-text') as HTMLSpanElement;
  const buttonIcon = document.getElementById('button-icon') as HTMLElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Disable button and show loading state
    submitButton.disabled = true;
    buttonText.textContent = 'Sending...';
    buttonIcon.style.display = 'none';

    try {
      // Submit form using Web3Forms API
      const formData = new FormData(form);
      const response = await fetch('https://api.web3forms.com/submit', {
        method: 'POST',
        body: formData
      });

      const data = await response.json();

      if (data.success) {
        // Show success message
        messageDiv.className = 'p-4 rounded-lg bg-green-50 border-2 border-green-200 text-green-800';
        messageDiv.textContent = 'Thank you for your message! I\'ll get back to you soon.';
        messageDiv.classList.remove('hidden');

        // Reset form
        form.reset();

        // Hide message after 8 seconds
        setTimeout(() => {
          messageDiv.classList.add('hidden');
        }, 8000);
      } else {
        throw new Error(data.message || 'Form submission failed');
      }
    } catch (error) {
      // Show error message
      messageDiv.className = 'p-4 rounded-lg bg-red-50 border-2 border-red-200 text-red-800';
      messageDiv.textContent = 'Sorry, there was an error sending your message. Please try again or email me directly at fcatala@irsicaixa.es';
      messageDiv.classList.remove('hidden');

      // Hide message after 10 seconds
      setTimeout(() => {
        messageDiv.classList.add('hidden');
      }, 10000);
    } finally {
      // Re-enable button
      submitButton.disabled = false;
      buttonText.textContent = 'Send Message';
      buttonIcon.style.display = 'block';
    }
  });
</script>

<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
     integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
     crossorigin=""/>

<!-- Leaflet JS -->
<script is:inline src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
     integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
     crossorigin=""></script>

<script is:inline define:vars={{
  availableText: contactEntry.data.availableText,
  unavailableText: contactEntry.data.unavailableText,
  workDays: contactEntry.data.workDays,
  workHoursStart: contactEntry.data.workHoursStart,
  workHoursEnd: contactEntry.data.workHoursEnd,
  timezone: contactEntry.data.timezone
}}>
  // Initialize the map after page loads
  document.addEventListener('DOMContentLoaded', function() {
    // Coordinates for Alaior, Menorca
    const alaiorLat = 39.9293;
    const alaiorLng = 4.1372;

    // Initialize map with zoomed out view
    const map = L.map('map', {
      center: [alaiorLat, alaiorLng],
      zoom: 4,
      zoomControl: true,
      attributionControl: false
    });

    // Add satellite tile layer (Esri World Imagery)
    L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
      maxZoom: 19
    }).addTo(map);

    // Add a custom marker for Alaior (Google Maps style pin)
    const marker = L.marker([alaiorLat, alaiorLng], {
      icon: L.divIcon({
        className: 'custom-marker',
        html: `<svg width="16" height="22.5" viewBox="0 0 32 45" xmlns="http://www.w3.org/2000/svg">
          <path d="M16 0C7.163 0 0 7.163 0 16c0 13 16 29 16 29s16-16 16-29c0-8.837-7.163-16-16-16z"
                fill="#22c55e"
                stroke="white"
                stroke-width="2"/>
          <circle cx="16" cy="16" r="6" fill="white"/>
        </svg>`,
        iconSize: [16, 22.5],
        iconAnchor: [8, 22.5],
        popupAnchor: [0, -22.5]
      })
    }).addTo(map);

    // Update availability status
    updateAvailabilityStatus();
  });

  // Function to update availability status
  function updateAvailabilityStatus() {
    const statusDot = document.getElementById('status-dot');
    const statusText = document.getElementById('status-text');

    if (!statusDot || !statusText) return;

    // Get current time in configured timezone
    const now = new Date();
    const options = { timeZone: timezone, hour: 'numeric', minute: 'numeric', hour12: false, weekday: 'short' };
    const formatter = new Intl.DateTimeFormat('en-US', options);
    const parts = formatter.formatToParts(now);

    const dayOfWeek = parts.find(p => p.type === 'weekday').value;
    const hour = parseInt(parts.find(p => p.type === 'hour').value);

    // Map weekday abbreviations to numbers (1=Monday, 7=Sunday)
    const dayMap = { 'Mon': 1, 'Tue': 2, 'Wed': 3, 'Thu': 4, 'Fri': 5, 'Sat': 6, 'Sun': 7 };
    const currentDay = dayMap[dayOfWeek];

    // Check if it's a working day and within working hours
    const isWorkingDay = workDays.includes(currentDay);
    const isWorkingHours = hour >= workHoursStart && hour < workHoursEnd;
    const isAvailable = isWorkingDay && isWorkingHours;

    if (isAvailable) {
      statusDot.className = 'w-2 h-2 rounded-full bg-green-500 animate-pulse';
      statusText.textContent = availableText;
    } else {
      statusDot.className = 'w-2 h-2 rounded-full bg-slate-400';
      statusText.textContent = unavailableText;
    }
  }

  // Update status every minute
  setInterval(updateAvailabilityStatus, 60000);
</script>
