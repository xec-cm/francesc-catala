---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
    <section
        class="relative px-4 sm:px-6 lg:px-8 min-h-screen pt-20 flex items-center justify-center overflow-hidden"
    >
        <!-- Background Effect -->
        <div
            class="absolute inset-0 -z-10 bg-gradient-to-br from-secondary via-white to-secondary/50 opacity-60"
        >
        </div>
        <div
            class="absolute inset-0 -z-10 bg-[radial-gradient(#617056_1px,transparent_1px)] [background-size:16px_16px] opacity-[0.03]"
        >
        </div>

        <div class="max-w-7xl mx-auto w-full mt-8 lg:-mt-16">
            <div class="grid lg:grid-cols-3 gap-10 lg:gap-20 items-center">
                <!-- Left column: Image -->
                <div
                    class="flex justify-center lg:justify-start order-1 lg:order-1"
                >
                    <div
                        class="w-[16rem] h-[16rem] sm:w-[26rem] sm:h-[26rem] lg:w-[30rem] lg:h-[30rem]"
                    >
                        <img
                            src="/images/404/404.svg"
                            alt="404 Page Not Found"
                            class="w-full h-full object-contain"
                        />
                    </div>
                </div>

                <!-- Right column: Content -->
                <div
                    class="order-2 lg:order-2 lg:col-span-2 text-center lg:text-left"
                >
                    <!-- Heading -->
                    <h1
                        class="text-2xl sm:text-4xl lg:text-5xl font-serif font-bold text-slate-900 mb-6"
                    >
                        Page Not Found
                    </h1>

                    <!-- Subtitle -->
                    <div class="mb-8">
                        <p
                            class="text-2xl sm:text-3xl lg:text-4xl font-handwritten text-primary font-medium"
                        >
                            Lost in the Data?
                        </p>
                    </div>

                    <!-- Description -->
                    <p
                        class="text-lg sm:text-xl text-slate-600 font-sans mb-8 leading-relaxed"
                    >
                        Oops! The page you're looking for seems to have drifted
                        into the void. Let's get you back to familiar territory.
                    </p>

                    <!-- Button -->
                    <a
                        href="/"
                        class="inline-flex items-center gap-2 px-6 py-3 text-base font-medium text-white bg-primary hover:bg-primary-dark rounded-lg transition-all duration-200 hover:shadow-lg hover:-translate-y-0.5"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                            ></path>
                        </svg>
                        Return Home
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
