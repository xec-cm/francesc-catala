---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
    <main
        class="min-h-screen pt-20 flex items-center justify-center px-4 sm:px-6 lg:px-8 relative overflow-hidden"
    >
        <!-- Background Effect (same as Hero) -->
        <div
            class="absolute inset-0 -z-10 bg-gradient-to-br from-secondary via-white to-secondary/50 opacity-60"
        >
        </div>
        <div
            class="absolute inset-0 -z-10 bg-[radial-gradient(#617056_1px,transparent_1px)] [background-size:16px_16px] opacity-[0.03]"
        >
        </div>

        <div class="text-center relative z-10">
            <h1
                class="text-8xl sm:text-9xl font-serif font-bold text-primary/20 mb-4 select-none"
            >
                404
            </h1>
            <div class="-mt-12 sm:-mt-16 relative">
                <h2
                    class="text-3xl sm:text-4xl font-handwritten font-bold text-slate-900 mb-4"
                >
                    Page Not Found
                </h2>
                <p
                    class="text-lg text-slate-600 font-sans mb-8 max-w-md mx-auto leading-relaxed"
                >
                    Oops! It seems you've ventured into uncharted territory. The
                    page you're looking for doesn't exist.
                </p>
                <a
                    href="/"
                    class="inline-flex items-center gap-2 px-6 py-3 text-base font-medium text-white bg-primary hover:bg-primary-dark rounded-lg transition-all duration-200 hover:shadow-lg hover:-translate-y-0.5"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                        ></path>
                    </svg>
                    Return Home
                </a>
            </div>
        </div>
    </main>
</Layout>
