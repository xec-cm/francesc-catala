        </div>
        <p class="text-slate-600 text-sm text-center">
          Bioinformatics & Microbiome Analytics
        </p>
      </div>

      <!-- Navigation links -->
      <nav class="flex flex-wrap justify-center gap-x-6 gap-y-2">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class="text-slate-600 hover:text-primary transition-colors duration-200 text-sm"
            >
              {link.label}
            </a>
          ))
        }
      </nav>

      <!-- Social links -->
      <div class="flex items-center gap-4">
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              aria-label={link.label}
              class="text-slate-600 hover:text-primary transition-colors duration-200"
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d={link.icon} />
              </svg>
            </a>
          ))
        }
      </div>
    </div>

    <!-- Version -->
    <div class="pt-2 text-center">
      <p class="text-slate-400 text-xs">
        v{pkg.version}
      </p>
    </div>
  </div>
</footer>
