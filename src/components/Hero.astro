---
import heroData from "../data/hero.json";

interface LinkPart {
  type: "link";
  text: string;
  url: string;
}

interface TextParagraph {
  type: "text";
  content: string;
}

interface CustomParagraph {
  type: "custom";
  parts: (string | LinkPart)[];
}

type Paragraph = TextParagraph | CustomParagraph;
---

<section
  class="relative px-4 sm:px-6 lg:px-8 min-h-[calc(100vh-5rem)] flex items-center justify-center overflow-hidden"
>
  <!-- Background Effect -->
  <div
    class="absolute inset-0 -z-10 bg-gradient-to-br from-secondary via-white to-secondary/50 opacity-60"
  >
  </div>
  <div
    class="absolute inset-0 -z-10 bg-[radial-gradient(#617056_1px,transparent_1px)] [background-size:16px_16px] opacity-[0.03]"
  >
  </div>

  <div class="max-w-7xl mx-auto w-full -mt-16">
    <div class="grid lg:grid-cols-3 gap-10 lg:gap-20 items-center">
      <!-- Left column: Image -->
      <div
        class="flex justify-center lg:justify-start order-1 lg:order-1 reveal reveal-delay-100"
      >
        <div
          class="w-[20rem] h-[20rem] sm:w-[26rem] sm:h-[26rem] lg:w-[30rem] lg:h-[30rem]"
        >
          <img
            id="hero-image"
            src={heroData.image.src}
            alt={heroData.image.alt}
            class="w-full h-full object-contain opacity-0 transition-opacity duration-700 ease-out"
          />
        </div>
      </div>

      <!-- Right column: Content -->
      <div class="order-2 lg:order-2 lg:col-span-2 text-center lg:text-left">
        <!-- Name -->
        <h1
          class="text-3xl sm:text-4xl lg:text-5xl font-serif font-bold text-slate-900 mb-6 reveal reveal-delay-200"
        >
          {heroData.name}
        </h1>

        <!-- Animated Title with typing effect -->
        <div class="min-h-[3rem] sm:min-h-[4rem] mb-8">
          <p
            id="typing-text"
            class="text-2xl sm:text-3xl lg:text-4xl font-handwritten text-primary font-medium reveal reveal-delay-300"
            data-text={heroData.title}
          >
            <span id="typed-content"></span>
            <span id="cursor" class="animate-pulse">|</span>
          </p>
        </div>

        <!-- Social Icons & CV Button -->
        <div
          class="flex gap-4 justify-center lg:justify-between items-center flex-wrap mb-8"
        >
          <div
            class="flex gap-4 items-center flex-wrap justify-center lg:justify-start"
          >
            <!-- GitHub -->
            <a
              href={heroData.social.github}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-600 hover:text-primary transition-colors duration-200"
              aria-label="GitHub"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </a>

            <!-- LinkedIn -->
            <a
              href={heroData.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-600 hover:text-primary transition-colors duration-200"
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </a>

            <!-- ORCID -->
            <a
              href={heroData.social.orcid}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-600 hover:text-primary transition-colors duration-200"
              aria-label="ORCID"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 0 1-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.016-5.325 5.016h-3.919V7.416zm1.444 1.303v7.444h2.297c2.359 0 4.053-1.303 4.053-3.722 0-2.403-1.694-3.722-4.053-3.722h-2.297z"
                ></path>
              </svg>
            </a>

            <!-- Google Scholar -->
            <a
              href={heroData.social.scholar}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-600 hover:text-primary transition-colors duration-200"
              aria-label="Google Scholar"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"
                ></path>
              </svg>
            </a>

            <!-- Twitter/X -->
            <a
              href={heroData.social.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-600 hover:text-primary transition-colors duration-200"
              aria-label="Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                ></path>
              </svg>
            </a>

            <!-- Email -->
            <a
              href={heroData.social.email}
              class="text-slate-600 hover:text-primary transition-colors duration-200"
              aria-label="Email"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 512 512">
                <path
                  d="M256 64C150 64 64 150 64 256s86 192 192 192c17.7 0 32 14.3 32 32s-14.3 32-32 32C114.6 512 0 397.4 0 256S114.6 0 256 0S512 114.6 512 256v32c0 53-43 96-96 96c-29.3 0-55.6-13.2-73.2-33.9C320 371.1 289.5 384 256 384c-70.7 0-128-57.3-128-128s57.3-128 128-128c27.9 0 53.7 8.9 74.7 24.1c5.7-5 13.1-8.1 21.3-8.1c17.7 0 32 14.3 32 32v80 32c0 17.7 14.3 32 32 32s32-14.3 32-32V256c0-106-86-192-192-192zm64 192c0-35.3-28.7-64-64-64s-64 28.7-64 64s28.7 64 64 64s64-28.7 64-64z"
                ></path>
              </svg>
            </a>

            <!-- CV Download -->
            <a
              href={heroData.social.cv}
              download
              class="text-slate-600 hover:text-primary transition-colors duration-200"
              aria-label="Download CV"
            >
              <svg class="w-6 h-5" fill="currentColor" viewBox="0 0 576 512">
                <path
                  d="M64 32C28.7 32 0 60.7 0 96V416c0 35.3 28.7 64 64 64H512c35.3 0 64-28.7 64-64V96c0-35.3-28.7-64-64-64H64zm80 256h64c44.2 0 80 35.8 80 80c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16c0-44.2 35.8-80 80-80zm-32-96a64 64 0 1 1 128 0 64 64 0 1 1 -128 0zm256-32H496c8.8 0 16 7.2 16 16s-7.2 16-16 16H368c-8.8 0-16-7.2-16-16s7.2-16 16-16zm0 64H496c8.8 0 16 7.2 16 16s-7.2 16-16 16H368c-8.8 0-16-7.2-16-16s7.2-16 16-16zm0 64H496c8.8 0 16 7.2 16 16s-7.2 16-16 16H368c-8.8 0-16-7.2-16-16s7.2-16 16-16z"
                ></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Greeting -->
        <p
          class="text-lg sm:text-xl font-sans text-slate-900 mb-4 font-medium reveal reveal-delay-300"
        >
          {heroData.greeting} â€”
        </p>

        <!-- Description Paragraphs -->
        <div class="space-y-4 mb-8">
          {
            heroData.description.map((paragraph: Paragraph) => {
              if (paragraph.type === "text") {
                return (
                  <p class="text-base sm:text-lg text-slate-600 font-sans leading-relaxed">
                    {paragraph.content}
                  </p>
                );
              } else if (paragraph.type === "custom") {
                return (
                  <p class="text-base sm:text-lg text-slate-600 font-sans leading-relaxed">
                    {paragraph.parts.map((part: string | LinkPart) => {
                      if (typeof part === "string") {
                        return part;
                      } else if (part.type === "link") {
                        return (
                          <a
                            href={part.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="font-bold text-primary-dark hover:text-primary underline decoration-2 underline-offset-2 transition-colors duration-200"
                          >
                            {part.text}
                          </a>
                        );
                      }
                    })}
                  </p>
                );
              }
            })
          }
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <button
      id="scroll-to-publications"
      class="mt-8 animate-bounce text-center mx-auto block cursor-pointer hover:text-primary transition-colors duration-200"
      aria-label="Scroll to publications"
    >
      <svg
        class="w-6 h-6 mx-auto text-slate-400 hover:text-primary transition-colors duration-200"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 9l-7 7-7-7"></path>
        ```
      </svg>
    </button>
  </div>
</section>

<script>
  // Hero image delayed fade-in
  const heroImage = document.getElementById(
    "hero-image",
  ) as HTMLImageElement | null;
  if (heroImage) {
    setTimeout(() => {
      heroImage.classList.remove("opacity-0");
      heroImage.classList.add("opacity-100");
    }, 500); // 500ms delay
  }

  // Typing effect
  const typingText = document.getElementById("typing-text");
  const typedContent = document.getElementById("typed-content");
  const cursor = document.getElementById("cursor");

  if (typingText && typedContent) {
    const text = typingText.dataset.text || "";
    let index = 0;
    const typingSpeed = 50; // milliseconds per character
    const startDelay = 500; // delay before starting

    function typeText() {
      if (index < text.length && typedContent) {
        typedContent.textContent += text.charAt(index);
        index++;
        setTimeout(typeText, typingSpeed);
      } else {
        // Optional: Remove cursor after typing is complete
        // cursor?.remove();
      }
    }

    // Start typing after a short delay
    setTimeout(typeText, startDelay);
  }

  // Scroll to next section button
  const scrollButton = document.getElementById("scroll-to-publications");
  if (scrollButton) {
    scrollButton.addEventListener("click", () => {
      // Find the next section (Projects)
      const nextSection = document.getElementById("projects");
      if (nextSection) {
        nextSection.scrollIntoView({ behavior: "smooth", block: "start" });
      }
    });
  }
</script>

<style>
  #cursor {
    display: inline-block;
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%,
    49% {
      opacity: 1;
    }
    50%,
    100% {
      opacity: 0;
    }
  }
</style>
